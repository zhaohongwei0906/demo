/* pages/home/home.wxss */

.slider,.slider swiper, .slider image{
  width:100%;
     height:390rpx; 
}
.index-nav{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.nav-item{
  width:33.33333%;
  height:200rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  border-right:0.5rpx solid #ccc;
  border-top:0.5rpx solid #ccc;
  font-size: 32rpx;
  transition: all 0.2s linear;
}
.nav-item:nth-child(3n){
  border-right:none;
}
.nav-item:nth-child(1),.nav-item:nth-child(2),.nav-item:nth-child(3){
  border-top:none;
}
.nav-item image{
  width:102rpx;
  height:102rpx;
   margin-bottom: 20rpx; 
   transition: all 0.2s linear;
}
.divider{
  background: #eee;
  height:15rpx;
}

.note{
    margin-top:10rpx;
    box-sizing: border-box;
   height: 50rpx;
   text-align: right;
    transform:translateX(100%);
}

.discountImg{
  width: 200rpx;
}


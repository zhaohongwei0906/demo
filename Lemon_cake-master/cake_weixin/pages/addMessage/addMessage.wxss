
page{
    box-sizing: border-box;
    padding:30rpx;
    width: 100%;
}
.add-message-view{
    margin-bottom: 200rpx;
}
.add-img-list{
    padding-top:20rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.added-img{
    border:1rpx solid rgb(196, 194, 194);
    border-radius: 20rpx;
    width:200rpx;
    height: 200rpx;
}
.add-img-list-item{
    box-sizing: content-box;
    margin: 10rpx 0rpx;
    width: 33.33%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.my-input{
    width: auto;
    border:1rpx solid #ddd;
    border-radius: 10rpx;
    padding:5rpx 10rpx;
    font-size:24rpx;

}
.add-message-view .title{
    line-height: 70rpx;
    height: 50rpx;
    font-size: 30rpx;
    font-weight: bold;
    padding:20rpx 0rpx;
}
.align-between{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.radio-group{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}
.radio-group .radio{
    text-align: center;
    width: 33.33%;
    font-size: 30rpx;
}
.radio-group .radio .wx-radio-input{
    width:30rpx;
    height: 30rpx;
    margin-bottom: 8rpx;
}
.point{
    position: relative;
    padding:20rpx 0rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin:15rpx 0rpx;
}
.point .my-input{
    width: 90%;
}
.point::before{
    content: "";
    width:10rpx;
    height: 10rpx;
    border-radius: 50%;
    background: #000;
}
.item-remarks{
  box-sizing: border-box;
  padding: 10rpx;
  width: 100%;
  text-align: right;
}
.absolue-right{
    position: absolute;
    top:50%;
    right:0;
    transform: translateY(-50%) scale(0.7);
    margin-right: 20rpx;
    background: #ddd;
}